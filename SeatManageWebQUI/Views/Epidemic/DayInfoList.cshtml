                            <td>性别：</td>
                            <td style="width:150px;">
                                @Model.Sex
                            </td>
                            <td>身份证：</td>
                            <td style="width:150px;">
                                @Model.IDCardNo
                            </td>
                            <td>电话号码：</td>
