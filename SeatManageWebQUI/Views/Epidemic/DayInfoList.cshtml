                                @Model.PhoneNo
                            </td>
                        </tr>
                        <tr>
                            <td>所属区域：</td>
                            <td style="width:150px;">
                                @Model.Area
                            </td>
                            <td>户籍：</td>
                            <td style="width:150px;">
                                @Model.Native
                            </td>
                            <td>到港时间：</td>
                            <td style="width:150px;">
                                @Model.ArriveTime
                            </td>
                            <td>到港目的：</td>
                            <td style="width:150px;">
                                @Model.ArrivePurpose
                            </td>
                            <td>交通方式：</td>
                            <td style="width:150px;">
                                @Model.Traffic
                            </td>
                            
                        </tr>
                        <tr>
                            <td>现居住地：</td>
                            <td style="width:150px;">
                                @Model.NowAddress
                            </td>
                            <td>负责人：</td>
                            <td style="width:150px;">
                                @Model.ManageMan
                            </td>
                            <td>联系电话：</td>
                            <td style="width:150px;">
                                @Model.ManageManPhone
                            </td>
                            <td>管控措施：</td>
                            <td style="width:150px;">
                                @Model.DisposeType
                            </td>
                        </tr>
                        <!--20200218zdh 添加关联人员-->
                         <tr>
                            <td>同行人员：</td>
                             <td  colspan="7">
                                 @foreach (var item in Model.TogetherPerson)
                                 {
                                    <a href="@(Url.Action("DayInfoList","Epidemic") + "?ID=" + @item.ID)" style="color:blue;">@item.PersonName</a>
                                 }
                            </td>
                        </tr>
                    </table>
                    </form>
</div>
            <div class="clear"></div>
            <br />
            <div class="infoCard infoCard2">
                <div class="title">
                    <span>记录列表</span>
                </div>
                @*<div class="box_tool_min padding_top2 padding_bottom2 padding_right5">
                    <div class="center">
                        <div class="left">
